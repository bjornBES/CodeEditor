<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="App">

  <Application.Resources>
    <!-- Pull from your JSON theme loader at runtime
    -->
    <Color x:Key="button.hoverBackground">#000000</Color>
    <Color x:Key="button.hoverForeground">#000000</Color>
    <Color x:Key="button.pressedBackground">#000000</Color>
    <Color x:Key="button.pressedForeground">#000000</Color>
    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{DynamicResource button.hoverBackground}"/>
    <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="{DynamicResource button.hoverForeground}"/>
    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="{DynamicResource button.pressedBackground}"/> <!-- pressed -->
    <SolidColorBrush x:Key="ButtonForegroundPressed" Color="{DynamicResource button.pressedForeground}"/> <!-- pressed -->
  </Application.Resources>

  <Application.Styles>
    <!-- Base theme
    -->
    <FluentTheme/>

    <!-- AvaloniaEdit theme-->
    <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />

    <!-- Global Button Hover Style
    <Style Selector="Button">
      <Setter Property="Background" Value="{DynamicResource button.background}"/>
      <Setter Property="Foreground" Value="{DynamicResource button.foreground}"/>
    </Style>

    <Style Selector="Button:pressed">
      <Setter Property="Background" Value="{DynamicResource button.background.click}"/>
    </Style>
    -->
  </Application.Styles>

</Application>
